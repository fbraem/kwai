{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "paths": {
      "@theme/*": [
        "theme/kwai/*",
        "*"
      ],
      "@root/*": [
        "../../../*",
        "*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "./dist/**"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json",
    },
    {
      "path": "../../packages/kwai-config"
    },
    {
      "path": "../../packages/kwai-ui"
    },
    {
      "path": "../../packages/kwai-api"
    }
  ],
}
